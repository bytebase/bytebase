{
  "$id": "bytebase.v1.Policy.schema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "data_source_query_policy": {
      "$ref": "bytebase.v1.DataSourceQueryPolicy.schema.strict.json"
    },
    "enforce": {
      "description": "Whether the policy is enforced.",
      "type": "boolean"
    },
    "inherit_from_parent": {
      "description": "Whether this policy inherits from its parent resource.",
      "type": "boolean"
    },
    "masking_exception_policy": {
      "$ref": "bytebase.v1.MaskingExceptionPolicy.schema.strict.json"
    },
    "masking_rule_policy": {
      "$ref": "bytebase.v1.MaskingRulePolicy.schema.strict.json"
    },
    "name": {
      "description": "The name of the policy.\n Format: {resource name}/policies/{policy type}\n Workspace resource name: \"\".\n Environment resource name: environments/environment-id.\n Instance resource name: instances/instance-id.\n Database resource name: instances/instance-id/databases/database-name.",
      "type": "string"
    },
    "query_data_policy": {
      "$ref": "bytebase.v1.QueryDataPolicy.schema.strict.json"
    },
    "resource_type": {
      "description": "The resource type for the policy.",
      "enum": [
        "RESOURCE_TYPE_UNSPECIFIED",
        "WORKSPACE",
        "ENVIRONMENT",
        "PROJECT"
      ],
      "title": "Policy Resource Type",
      "type": "string"
    },
    "rollout_policy": {
      "$ref": "bytebase.v1.RolloutPolicy.schema.strict.json"
    },
    "tag_policy": {
      "$ref": "bytebase.v1.TagPolicy.schema.strict.json"
    },
    "type": {
      "description": "The type of policy.",
      "enum": [
        "POLICY_TYPE_UNSPECIFIED",
        "ROLLOUT_POLICY",
        "MASKING_RULE",
        "MASKING_EXCEPTION",
        "TAG",
        "DATA_SOURCE_QUERY",
        "DATA_QUERY"
      ],
      "title": "Policy Type",
      "type": "string"
    }
  },
  "required": [
    "name",
    "inherit_from_parent",
    "type",
    "enforce",
    "resource_type"
  ],
  "title": "Policy",
  "type": "object"
}

{
  "$id": "bytebase.v1.DimensionConstraint.jsonschema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "DimensionConstraint defines constraints for a spatial dimension.",
  "properties": {
    "dimension": {
      "description": "Dimension name/type (X, Y, Z, M, etc.)",
      "type": "string"
    },
    "maxValue": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "enum": [
            "Infinity",
            "-Infinity",
            "NaN"
          ],
          "type": "string"
        }
      ],
      "description": "Maximum value for this dimension"
    },
    "minValue": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "enum": [
            "Infinity",
            "-Infinity",
            "NaN"
          ],
          "type": "string"
        }
      ],
      "description": "Minimum value for this dimension"
    },
    "tolerance": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "enum": [
            "Infinity",
            "-Infinity",
            "NaN"
          ],
          "type": "string"
        }
      ],
      "description": "Tolerance for this dimension"
    }
  },
  "required": [
    "dimension",
    "minValue",
    "maxValue",
    "tolerance"
  ],
  "title": "Dimension Constraint",
  "type": "object"
}

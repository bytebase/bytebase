{
  "$id": "bytebase.v1.IssueComment.schema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "A comment on an issue.",
  "properties": {
    "approval": {
      "$ref": "bytebase.v1.IssueComment.Approval.schema.strict.json",
      "description": "Approval event."
    },
    "comment": {
      "description": "The text content of the comment.",
      "maxLength": 65536,
      "type": "string"
    },
    "create_time": {
      "$ref": "google.protobuf.Timestamp.schema.strict.json"
    },
    "creator": {
      "description": "Format: users/{email}",
      "type": "string"
    },
    "issue_update": {
      "$ref": "bytebase.v1.IssueComment.IssueUpdate.schema.strict.json",
      "description": "Issue update event."
    },
    "name": {
      "description": "Format: projects/{project}/issues/{issue}/issueComments/{issueComment-uid}",
      "type": "string"
    },
    "payload": {
      "description": "TODO: use struct message instead.",
      "type": "string"
    },
    "stage_end": {
      "$ref": "bytebase.v1.IssueComment.StageEnd.schema.strict.json",
      "description": "Stage end event."
    },
    "task_prior_backup": {
      "$ref": "bytebase.v1.IssueComment.TaskPriorBackup.schema.strict.json",
      "description": "Task prior backup event."
    },
    "task_update": {
      "$ref": "bytebase.v1.IssueComment.TaskUpdate.schema.strict.json",
      "description": "Task update event."
    },
    "update_time": {
      "$ref": "google.protobuf.Timestamp.schema.strict.json"
    }
  },
  "required": [
    "name",
    "comment",
    "payload",
    "creator"
  ],
  "title": "Issue Comment",
  "type": "object"
}

{
  "$id": "bytebase.store.TessellationConfig.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "TessellationConfig defines tessellation parameters for spatial indexes.",
  "patternProperties": {
    "^(boundingBox)$": {
      "$ref": "bytebase.store.BoundingBox.schema.json",
      "description": "Bounding box for GEOMETRY indexes (SQL Server)"
    },
    "^(cellsPerObject)$": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "Cells per object (SQL Server)"
    },
    "^(gridLevels)$": {
      "description": "Grid level configuration (SQL Server)",
      "items": {
        "$ref": "bytebase.store.GridLevel.schema.json"
      },
      "type": "array"
    }
  },
  "properties": {
    "bounding_box": {
      "$ref": "bytebase.store.BoundingBox.schema.json",
      "description": "Bounding box for GEOMETRY indexes (SQL Server)"
    },
    "cells_per_object": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "Cells per object (SQL Server)"
    },
    "grid_levels": {
      "description": "Grid level configuration (SQL Server)",
      "items": {
        "$ref": "bytebase.store.GridLevel.schema.json"
      },
      "type": "array"
    },
    "scheme": {
      "default": "",
      "description": "Tessellation scheme\n Examples: GEOMETRY_GRID, GEOGRAPHY_GRID, GEOMETRY_AUTO_GRID, GEOGRAPHY_AUTO_GRID",
      "type": "string"
    }
  },
  "title": "Tessellation Config",
  "type": "object"
}

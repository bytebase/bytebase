{
  "$id": "bytebase.v1.Task.DatabaseUpdate.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Payload for updating a database schema.",
  "patternProperties": {
    "^(databaseChangeType)$": {
      "anyOf": [
        {
          "pattern": "^DATABASE_CHANGE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "MIGRATE",
            "SDL"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of database change (MIGRATE or SDL).",
      "title": "Database Change Type"
    },
    "^(schemaVersion)$": {
      "default": "",
      "description": "The target schema version after this update.",
      "type": "string"
    }
  },
  "properties": {
    "database_change_type": {
      "anyOf": [
        {
          "pattern": "^DATABASE_CHANGE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "MIGRATE",
            "SDL"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of database change (MIGRATE or SDL).",
      "title": "Database Change Type"
    },
    "schema_version": {
      "default": "",
      "description": "The target schema version after this update.",
      "type": "string"
    },
    "sheet": {
      "default": "",
      "description": "Format: projects/{project}/sheets/{sheet}",
      "type": "string"
    }
  },
  "title": "Database Update",
  "type": "object"
}

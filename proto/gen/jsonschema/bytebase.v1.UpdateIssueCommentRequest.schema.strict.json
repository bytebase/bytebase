{
  "$id": "bytebase.v1.UpdateIssueCommentRequest.schema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "allow_missing": {
      "description": "If set to true, and the issue comment is not found, a new issue comment will be created.\n In this situation, `update_mask` is ignored.",
      "type": "boolean"
    },
    "issue_comment": {
      "$ref": "bytebase.v1.IssueComment.schema.strict.json",
      "description": "The comment to update."
    },
    "parent": {
      "description": "The issue name\n Format: projects/{project}/issues/{issue}",
      "type": "string"
    },
    "update_mask": {
      "$ref": "google.protobuf.FieldMask.schema.strict.json",
      "description": "The list of fields to update."
    }
  },
  "required": [
    "parent",
    "allow_missing"
  ],
  "title": "Update Issue Comment Request",
  "type": "object"
}

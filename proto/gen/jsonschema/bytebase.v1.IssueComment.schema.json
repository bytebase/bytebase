{
  "$id": "bytebase.v1.IssueComment.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "A comment on an issue.",
  "patternProperties": {
    "^(createTime)$": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "^(issueUpdate)$": {
      "$ref": "bytebase.v1.IssueComment.IssueUpdate.schema.json",
      "description": "Issue update event."
    },
    "^(stageEnd)$": {
      "$ref": "bytebase.v1.IssueComment.StageEnd.schema.json",
      "description": "Stage end event."
    },
    "^(taskPriorBackup)$": {
      "$ref": "bytebase.v1.IssueComment.TaskPriorBackup.schema.json",
      "description": "Task prior backup event."
    },
    "^(taskUpdate)$": {
      "$ref": "bytebase.v1.IssueComment.TaskUpdate.schema.json",
      "description": "Task update event."
    },
    "^(updateTime)$": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    }
  },
  "properties": {
    "approval": {
      "$ref": "bytebase.v1.IssueComment.Approval.schema.json",
      "description": "Approval event."
    },
    "comment": {
      "default": "",
      "description": "The text content of the comment.",
      "maxLength": 65536,
      "type": "string"
    },
    "create_time": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "creator": {
      "default": "",
      "description": "Format: users/{email}",
      "type": "string"
    },
    "issue_update": {
      "$ref": "bytebase.v1.IssueComment.IssueUpdate.schema.json",
      "description": "Issue update event."
    },
    "name": {
      "default": "",
      "description": "Format: projects/{project}/issues/{issue}/issueComments/{issueComment-uid}",
      "type": "string"
    },
    "payload": {
      "default": "",
      "description": "TODO: use struct message instead.",
      "type": "string"
    },
    "stage_end": {
      "$ref": "bytebase.v1.IssueComment.StageEnd.schema.json",
      "description": "Stage end event."
    },
    "task_prior_backup": {
      "$ref": "bytebase.v1.IssueComment.TaskPriorBackup.schema.json",
      "description": "Task prior backup event."
    },
    "task_update": {
      "$ref": "bytebase.v1.IssueComment.TaskUpdate.schema.json",
      "description": "Task update event."
    },
    "update_time": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    }
  },
  "title": "Issue Comment",
  "type": "object"
}

{
  "$id": "bytebase.v1.Advice.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^(endPosition)$": {
      "$ref": "bytebase.v1.Position.schema.json"
    },
    "^(ruleType)$": {
      "anyOf": [
        {
          "pattern": "^RULE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "PARSER_BASED",
            "AI_POWERED"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of linting rule that generated this advice.",
      "title": "Rule Type"
    },
    "^(startPosition)$": {
      "$ref": "bytebase.v1.Position.schema.json",
      "description": "The start_position is inclusive and the end_position is exclusive.\n TODO: use range instead"
    }
  },
  "properties": {
    "code": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "The advice code."
    },
    "content": {
      "default": "",
      "description": "The advice content.",
      "type": "string"
    },
    "end_position": {
      "$ref": "bytebase.v1.Position.schema.json"
    },
    "rule_type": {
      "anyOf": [
        {
          "pattern": "^RULE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "PARSER_BASED",
            "AI_POWERED"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of linting rule that generated this advice.",
      "title": "Rule Type"
    },
    "start_position": {
      "$ref": "bytebase.v1.Position.schema.json",
      "description": "The start_position is inclusive and the end_position is exclusive.\n TODO: use range instead"
    },
    "status": {
      "anyOf": [
        {
          "pattern": "^ADVICE_LEVEL_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "SUCCESS",
            "WARNING",
            "ERROR"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The advice level.",
      "title": "Level"
    },
    "title": {
      "default": "",
      "description": "The advice title.",
      "type": "string"
    }
  },
  "title": "Advice",
  "type": "object"
}

{
  "$id": "bytebase.v1.IssueComment.jsonschema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "A comment on an issue.",
  "patternProperties": {
    "^(create_time)$": {
      "$ref": "google.protobuf.Timestamp.jsonschema.json"
    },
    "^(issue_update)$": {
      "$ref": "bytebase.v1.IssueComment.IssueUpdate.jsonschema.json",
      "description": "Issue update event."
    },
    "^(stage_end)$": {
      "$ref": "bytebase.v1.IssueComment.StageEnd.jsonschema.json",
      "description": "Stage end event."
    },
    "^(task_prior_backup)$": {
      "$ref": "bytebase.v1.IssueComment.TaskPriorBackup.jsonschema.json",
      "description": "Task prior backup event."
    },
    "^(task_update)$": {
      "$ref": "bytebase.v1.IssueComment.TaskUpdate.jsonschema.json",
      "description": "Task update event."
    },
    "^(update_time)$": {
      "$ref": "google.protobuf.Timestamp.jsonschema.json"
    }
  },
  "properties": {
    "approval": {
      "$ref": "bytebase.v1.IssueComment.Approval.jsonschema.json",
      "description": "Approval event."
    },
    "comment": {
      "default": "",
      "description": "The text content of the comment.",
      "maxLength": 65536,
      "type": "string"
    },
    "createTime": {
      "$ref": "google.protobuf.Timestamp.jsonschema.json"
    },
    "creator": {
      "default": "",
      "description": "Format: users/{email}",
      "type": "string"
    },
    "issueUpdate": {
      "$ref": "bytebase.v1.IssueComment.IssueUpdate.jsonschema.json",
      "description": "Issue update event."
    },
    "name": {
      "default": "",
      "description": "Format: projects/{project}/issues/{issue}/issueComments/{issueComment-uid}",
      "type": "string"
    },
    "payload": {
      "default": "",
      "description": "TODO: use struct message instead.",
      "type": "string"
    },
    "stageEnd": {
      "$ref": "bytebase.v1.IssueComment.StageEnd.jsonschema.json",
      "description": "Stage end event."
    },
    "taskPriorBackup": {
      "$ref": "bytebase.v1.IssueComment.TaskPriorBackup.jsonschema.json",
      "description": "Task prior backup event."
    },
    "taskUpdate": {
      "$ref": "bytebase.v1.IssueComment.TaskUpdate.jsonschema.json",
      "description": "Task update event."
    },
    "updateTime": {
      "$ref": "google.protobuf.Timestamp.jsonschema.json"
    }
  },
  "title": "Issue Comment",
  "type": "object"
}

{
  "$id": "bytebase.store.Instance.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Instance is the proto for instances.",
  "patternProperties": {
    "^(dataSources)$": {
      "items": {
        "$ref": "bytebase.store.DataSource.schema.json"
      },
      "type": "array"
    },
    "^(externalLink)$": {
      "default": "",
      "type": "string"
    },
    "^(lastSyncTime)$": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "^(maximumConnections)$": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "The maximum number of connections.\n The default is 10 if the value is unset or zero."
    },
    "^(mysqlLowerCaseTableNames)$": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "The lower_case_table_names config for MySQL instances.\n It is used to determine whether the table names and database names are case sensitive."
    },
    "^(syncDatabases)$": {
      "description": "Enable sync for the following databases.\n Default empty, means sync all schemas \u0026 databases.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "^(syncInterval)$": {
      "$ref": "google.protobuf.Duration.schema.json",
      "description": "The interval between automatic instance synchronizations."
    }
  },
  "properties": {
    "activation": {
      "default": false,
      "type": "boolean"
    },
    "data_sources": {
      "items": {
        "$ref": "bytebase.store.DataSource.schema.json"
      },
      "type": "array"
    },
    "engine": {
      "anyOf": [
        {
          "pattern": "^ENGINE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "CLICKHOUSE",
            "MYSQL",
            "POSTGRES",
            "SNOWFLAKE",
            "SQLITE",
            "TIDB",
            "MONGODB",
            "REDIS",
            "ORACLE",
            "SPANNER",
            "MSSQL",
            "REDSHIFT",
            "MARIADB",
            "OCEANBASE",
            "STARROCKS",
            "DORIS",
            "HIVE",
            "ELASTICSEARCH",
            "BIGQUERY",
            "DYNAMODB",
            "DATABRICKS",
            "COCKROACHDB",
            "COSMOSDB",
            "TRINO",
            "CASSANDRA"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "title": "Engine"
    },
    "external_link": {
      "default": "",
      "type": "string"
    },
    "labels": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "Labels are key-value pairs that can be attached to the instance.\n For example, { \"org_group\": \"infrastructure\", \"environment\": \"production\" }",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "last_sync_time": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "maximum_connections": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "The maximum number of connections.\n The default is 10 if the value is unset or zero."
    },
    "mysql_lower_case_table_names": {
      "anyOf": [
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "default": 0,
      "description": "The lower_case_table_names config for MySQL instances.\n It is used to determine whether the table names and database names are case sensitive."
    },
    "roles": {
      "items": {
        "$ref": "bytebase.store.InstanceRole.schema.json"
      },
      "type": "array"
    },
    "sync_databases": {
      "description": "Enable sync for the following databases.\n Default empty, means sync all schemas \u0026 databases.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "sync_interval": {
      "$ref": "google.protobuf.Duration.schema.json",
      "description": "The interval between automatic instance synchronizations."
    },
    "title": {
      "default": "",
      "type": "string"
    },
    "version": {
      "default": "",
      "type": "string"
    }
  },
  "title": "Instance",
  "type": "object"
}

{
  "$id": "bytebase.v1.Policy.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^(dataSourceQueryPolicy)$": {
      "$ref": "bytebase.v1.DataSourceQueryPolicy.schema.json"
    },
    "^(inheritFromParent)$": {
      "default": false,
      "description": "Whether this policy inherits from its parent resource.",
      "type": "boolean"
    },
    "^(maskingExceptionPolicy)$": {
      "$ref": "bytebase.v1.MaskingExceptionPolicy.schema.json"
    },
    "^(maskingRulePolicy)$": {
      "$ref": "bytebase.v1.MaskingRulePolicy.schema.json"
    },
    "^(queryDataPolicy)$": {
      "$ref": "bytebase.v1.QueryDataPolicy.schema.json"
    },
    "^(resourceType)$": {
      "anyOf": [
        {
          "pattern": "^RESOURCE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "WORKSPACE",
            "ENVIRONMENT",
            "PROJECT"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The resource type for the policy.",
      "title": "Policy Resource Type"
    },
    "^(rolloutPolicy)$": {
      "$ref": "bytebase.v1.RolloutPolicy.schema.json"
    },
    "^(tagPolicy)$": {
      "$ref": "bytebase.v1.TagPolicy.schema.json"
    }
  },
  "properties": {
    "data_source_query_policy": {
      "$ref": "bytebase.v1.DataSourceQueryPolicy.schema.json"
    },
    "enforce": {
      "default": false,
      "description": "Whether the policy is enforced.",
      "type": "boolean"
    },
    "inherit_from_parent": {
      "default": false,
      "description": "Whether this policy inherits from its parent resource.",
      "type": "boolean"
    },
    "masking_exception_policy": {
      "$ref": "bytebase.v1.MaskingExceptionPolicy.schema.json"
    },
    "masking_rule_policy": {
      "$ref": "bytebase.v1.MaskingRulePolicy.schema.json"
    },
    "name": {
      "default": "",
      "description": "The name of the policy.\n Format: {resource name}/policies/{policy type}\n Workspace resource name: \"\".\n Environment resource name: environments/environment-id.\n Instance resource name: instances/instance-id.\n Database resource name: instances/instance-id/databases/database-name.",
      "type": "string"
    },
    "query_data_policy": {
      "$ref": "bytebase.v1.QueryDataPolicy.schema.json"
    },
    "resource_type": {
      "anyOf": [
        {
          "pattern": "^RESOURCE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "WORKSPACE",
            "ENVIRONMENT",
            "PROJECT"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The resource type for the policy.",
      "title": "Policy Resource Type"
    },
    "rollout_policy": {
      "$ref": "bytebase.v1.RolloutPolicy.schema.json"
    },
    "tag_policy": {
      "$ref": "bytebase.v1.TagPolicy.schema.json"
    },
    "type": {
      "anyOf": [
        {
          "pattern": "^POLICY_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "ROLLOUT_POLICY",
            "MASKING_RULE",
            "MASKING_EXCEPTION",
            "TAG",
            "DATA_SOURCE_QUERY",
            "DATA_QUERY"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of policy.",
      "title": "Policy Type"
    }
  },
  "title": "Policy",
  "type": "object"
}

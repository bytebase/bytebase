{
  "$id": "bytebase.v1.ColumnCatalog.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Column metadata within a table.",
  "patternProperties": {
    "^(objectSchema)$": {
      "$ref": "bytebase.v1.ObjectSchema.schema.json",
      "description": "Object schema for complex column types like JSON."
    },
    "^(semanticType)$": {
      "default": "",
      "description": "The semantic type describing the data purpose.",
      "type": "string"
    }
  },
  "properties": {
    "classification": {
      "default": "",
      "description": "The data classification level for this column.",
      "type": "string"
    },
    "labels": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "User-defined labels for this column.",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "name": {
      "default": "",
      "description": "The column name.",
      "type": "string"
    },
    "object_schema": {
      "$ref": "bytebase.v1.ObjectSchema.schema.json",
      "description": "Object schema for complex column types like JSON."
    },
    "semantic_type": {
      "default": "",
      "description": "The semantic type describing the data purpose.",
      "type": "string"
    }
  },
  "title": "Column Catalog",
  "type": "object"
}

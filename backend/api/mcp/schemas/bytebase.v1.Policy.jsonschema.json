{
  "$id": "bytebase.v1.Policy.jsonschema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^(data_source_query_policy)$": {
      "$ref": "bytebase.v1.DataSourceQueryPolicy.jsonschema.json"
    },
    "^(inherit_from_parent)$": {
      "default": false,
      "description": "Whether this policy inherits from its parent resource.",
      "type": "boolean"
    },
    "^(masking_exception_policy)$": {
      "$ref": "bytebase.v1.MaskingExceptionPolicy.jsonschema.json"
    },
    "^(masking_rule_policy)$": {
      "$ref": "bytebase.v1.MaskingRulePolicy.jsonschema.json"
    },
    "^(query_data_policy)$": {
      "$ref": "bytebase.v1.QueryDataPolicy.jsonschema.json"
    },
    "^(resource_type)$": {
      "anyOf": [
        {
          "pattern": "^RESOURCE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "WORKSPACE",
            "ENVIRONMENT",
            "PROJECT"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The resource type for the policy.",
      "title": "Policy Resource Type"
    },
    "^(rollout_policy)$": {
      "$ref": "bytebase.v1.RolloutPolicy.jsonschema.json"
    },
    "^(tag_policy)$": {
      "$ref": "bytebase.v1.TagPolicy.jsonschema.json"
    }
  },
  "properties": {
    "dataSourceQueryPolicy": {
      "$ref": "bytebase.v1.DataSourceQueryPolicy.jsonschema.json"
    },
    "enforce": {
      "default": false,
      "description": "Whether the policy is enforced.",
      "type": "boolean"
    },
    "inheritFromParent": {
      "default": false,
      "description": "Whether this policy inherits from its parent resource.",
      "type": "boolean"
    },
    "maskingExceptionPolicy": {
      "$ref": "bytebase.v1.MaskingExceptionPolicy.jsonschema.json"
    },
    "maskingRulePolicy": {
      "$ref": "bytebase.v1.MaskingRulePolicy.jsonschema.json"
    },
    "name": {
      "default": "",
      "description": "The name of the policy.\n Format: {resource name}/policies/{policy type}\n Workspace resource name: \"\".\n Environment resource name: environments/environment-id.\n Instance resource name: instances/instance-id.\n Database resource name: instances/instance-id/databases/database-name.",
      "type": "string"
    },
    "queryDataPolicy": {
      "$ref": "bytebase.v1.QueryDataPolicy.jsonschema.json"
    },
    "resourceType": {
      "anyOf": [
        {
          "pattern": "^RESOURCE_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "WORKSPACE",
            "ENVIRONMENT",
            "PROJECT"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The resource type for the policy.",
      "title": "Policy Resource Type"
    },
    "rolloutPolicy": {
      "$ref": "bytebase.v1.RolloutPolicy.jsonschema.json"
    },
    "tagPolicy": {
      "$ref": "bytebase.v1.TagPolicy.jsonschema.json"
    },
    "type": {
      "anyOf": [
        {
          "pattern": "^POLICY_TYPE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "ROLLOUT_POLICY",
            "MASKING_RULE",
            "MASKING_EXCEPTION",
            "TAG",
            "DATA_SOURCE_QUERY",
            "DATA_QUERY"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "The type of policy.",
      "title": "Policy Type"
    }
  },
  "title": "Policy",
  "type": "object"
}

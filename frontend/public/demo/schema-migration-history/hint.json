[
  {
    "selector": "[data-label='bb-database-detail-action-buttons-container']",
    "type": "shield",
    "url": ".*",
    "additionStyle": {
      "backdropFilter": "unset",
      "background": "transparent"
    }
  },
  {
    "selector": "[data-label='bb-migration-history-establish-baseline-alert'] [data-label='bb-alert-ok-button']",
    "type": "shield",
    "url": ".+?/db/.+?#migration-history$",
    "dialog": {
      "title": "",
      "description": {
        "en-US": "Since this is a read-only DEMO, you can contact support@bytebase.com to request a full DEMO.",
        "zh-CN": "但由于这是个只读 DEMO，您可以联系 support@bytebase.com 来申请完整的 DEMO 进行尝试"
      },
      "alwaysShow": true
    },
    "additionStyle": {
      "backdropFilter": "unset"
    }
  },
  {
    "selector": "[data-label='bb-dashboard-header-database-entry']",
    "url": "^(?!.+/(db|issue/))",
    "cover": true,
    "dialog": {
      "title": "",
      "description": {
        "en-US": "Click here. Let's enter the DEMO",
        "zh-CN": "点击这里，让我们进入 DEMO"
      },
      "alwaysShow": true
    }
  },
  {
    "selector": "[data-label='bb-database-table']",
    "url": ".+?/db",
    "cover": true,
    "dialog": {
      "title": "",
      "description": {
        "en-US": "Selecting the target database",
        "zh-CN": "选择目标数据库"
      },
      "alwaysShow": true,
      "position": "bottom"
    }
  },
  {
    "selector": "[data-label='bb-main-body-wrapper']",
    "url": ".+?/(db|issue)/.+",
    "cover": true
  },
  {
    "selector": "[data-label='bb-database-detail-tab'] button:nth-child(2)",
    "url": ".+?/db/.+?#overview$",
    "type": "tooltip",
    "position": "center",
    "dialog": {
      "title": "",
      "description": {
        "en-US": "All migration records are here.",
        "zh-CN": "所有的变更记录都在这里"
      },
      "alwaysShow": true,
      "position": "right"
    },
    "additionStyle": {
      "marginLeft": "7px",
      "marginTop": "10px"
    }
  },
  {
    "selector": "[data-label='bb-database-detail-tab'] button:nth-child(3)",
    "url": ".*",
    "type": "shield",
    "additionStyle": {
      "backdropFilter": "unset",
      "background": "transparent"
    }
  },
  {
    "selector": "[data-label='bb-migration-history-table'] tr:nth-child(2) > td:nth-child(2)",
    "url": ".+?/db/.+?#migration-history$",
    "type": "tooltip",
    "position": "leftcenter",
    "dialog": {
      "title": "",
      "description": {
        "en-US": "In this migration, drift is detected. Click for more.",
        "zh-CN": "一次常规的变更，其中检测到了偏差。点击查看详情"
      },
      "alwaysShow": true,
      "position": "right"
    },
    "additionStyle": {
      "marginLeft": "-16px"
    }
  },
  {
    "selector": "[data-label='bb-migration-history-view-drift-button']",
    "url": ".+?/db/.+?/history/.+",
    "type": "tooltip",
    "position": "center",
    "dialog": {
      "title": "",
      "description": {
        "en-US": "This migration task also detected schema drift. It means another client performed some schema changes which were out of version control.",
        "zh-CN": "本次变更还检测到了 Schema 偏差，说明有数据库变更通过其他客户端发起，脱离了版本管控"
      },
      "alwaysShow": true,
      "position": "right"
    },
    "additionStyle": {
      "marginLeft": "2px",
      "marginTop": "10px"
    }
  },
  {
    "selector": "a.bb-comment-link",
    "url": ".+?/issue/.+",
    "type": "tooltip",
    "dialog": {
      "title": "",
      "description": {
        "en-US": "Let's go back to Migration History.",
        "zh-CN": "让我们回到 Migration History"
      },
      "alwaysShow": true,
      "position": "right"
    }
  }
]
